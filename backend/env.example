# Configuración del entorno para CSV Dashboard Backend
# Copia este archivo a .env y ajusta los valores

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Configuración de datos
DATA_DIR=data
MAX_FILE_SIZE=52428800  # 50MB en bytes
ALLOWED_EXTENSIONS=.csv

# Configuración de CORS (en producción, especificar dominios específicos)
CORS_ORIGINS=*

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de seguridad
UPLOAD_DIR=data/uploads
MAX_UPLOADS_PER_HOUR=100
